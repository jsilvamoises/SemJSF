<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/polishop?createDatabaseIfNotExist=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1982</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="com.jsilvamoises.model.entities.Cidade"/>
    <mapping class="com.jsilvamoises.model.entities.Endereco"/>
    <mapping class="com.jsilvamoises.model.entities.Estado"/>
    <mapping class="com.jsilvamoises.model.entities.Pessoa"/>
    <mapping class="com.jsilvamoises.model.entities.Sexo"/>
    <mapping class="com.jsilvamoises.model.entities.TipoEndereco"/>
    <mapping class="com.jsilvamoises.model.entities.TipoLogradouro"/>
    <mapping class="com.jsilvamoises.model.entities.TipoAcesso"/>
    <mapping class="com.jsilvamoises.model.entities.AcessoLiberado"/>
    <mapping class="com.jsilvamoises.model.entities.TipoCodigoBarra"/>
  </session-factory>
</hibernate-configuration>
